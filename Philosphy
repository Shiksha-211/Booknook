    <script>
      const searchBox = document.getElementById("Searchbox");
const images_1 = document.querySelectorAll('.image_1');

searchBox.addEventListener('input', () => {
    const filter = searchBox.value.toLowerCase();

    images_1.forEach(image_1 => {
        const title = image_1.querySelector('h4').textContent.toLowerCase();
        if (title.includes(filter)) {
            image_1.style.display = '';
        } else {
            image_1.style.display = 'none';
        }
    });
});

        // Get elements from the DOM
        const postButton = document.getElementById('post-comment-btn');  // Post comment button
        const commentInput = document.getElementById('comment-input');  // Textarea for input
        const commentList = document.getElementById('comment-list');    // List to display comments

        // Add event listener to the button
        postButton.addEventListener('click', function() {
            const commentText = commentInput.value.trim();  // Get the comment text and remove extra spaces

            // Check if the input is not empty
            if (commentText) {
                // Create a new <li> element for the comment
                const newComment = document.createElement('li');
                newComment.classList.add('comment-item'); // Add class for styling
                newComment.textContent = commentText;     // Set the comment text

                // Append the new comment to the comment list
                commentList.appendChild(newComment);

                // Clear the input after posting
                commentInput.value = '';
                commentInput.classList.remove('empty');  // Remove empty input border color
            } else {
                // If the input is empty, show a warning by adding a red border
                commentInput.classList.add('empty');
                alert("Please write something before posting a comment.");
            }
        });
        const openBtn=document.getElementById("openModel");
        const closeBtn=document.getElementById("closeModal");
        const modal = document.getElementById("modal");
     openBtn.addEventListener("click",() =>{
        modal.classList.add("active");
     })
     closeBtn.addEventListener("click",() =>{
        modal.classList.remove("active");
     })
    </script>
                
